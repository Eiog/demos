---
export interface Props {
	title?: string;
  home?:string
  npm?:string,
  github?:string
}

const { title,home,npm,github } = Astro.props;
---
<div class="wh-full flex-col gap-3">
  <div class="flex items-baseline gap-1">
    <h1 class="text-3xl flex-y-center gap-1 dark:(text-white/80)">
      ðŸ‘‰
      {title}
    </h1>
    {
      home?(
        <a href={home} target="_blank" class="text-black/60 hover:(text-black) dark:(text-white/50 hover:(text-white/80))" >
          <i class="i-ri-home-fill"></i>
        </a>
      ):null
    }
    {
      npm?(
        <a href={npm} target="_blank" class="text-red-6 hover:(text-red-8) dark:(text-red-8 hover:(text-red-7))" >
