---
import { Code } from 'astro/components';
export interface Props {
  code?:string
}
const {code} = Astro.props
const html = await Astro.slots.render('default')
---
<div class="wh-full flex-col gap-3 rounded-md p-3 bg-#282C34">
  <div class="flex gap-2">
    <span class="w-3 h-3 rounded-full bg-green-5"></span>
    <span class="w-3 h-3 rounded-full bg-red-5"></span>
    <span class="w-3 h-3 rounded-full bg-yellow-5"></span>
  </div>
  <div class="border-t p-t-2 dark:(border-white/30)">
    <Code code={code||html} lang="ts" wrap theme="one-dark-pro" />
  </div>
</div>
