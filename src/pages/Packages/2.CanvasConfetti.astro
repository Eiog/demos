---
import Layout from '~/layouts/Layout.astro'
import Code from '~/components/Code.astro';
---
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<Layout title="SweetAlert" npm="https://www.kirilv.com/canvas-confetti/" github="https://github.com/catdad/canvas-confetti">
  <div class="flex-col gap-1">
    <div>
      <button class="btn btn-primary" onclick="confetti({
        particleCount: 100,
        spread: 70,
        origin: { y: 0.6 }
      })">Confetti</button>
      <Code>
        {
`confetti({
  particleCount: 100,
  spread: 70,
  origin: { y: 0.6 }
});`
        }
      </Code>
    </div>
  </div>
</Layout>
